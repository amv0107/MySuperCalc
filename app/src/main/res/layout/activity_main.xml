<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workingsTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:ellipsize="start"
            android:maxLines="2"
            android:paddingRight="30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:lines="1"
            android:paddingRight="30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_clear"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_2_btn"
                android:text="AC" />

            <TextView
                android:id="@+id/btn_bracket_open"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="(" />

            <TextView
                android:id="@+id/btn_bracket_close"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text=")" />

            <TextView
                android:id="@+id/btn_division"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_3_btn"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_7"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="7" />

            <TextView
                android:id="@+id/btn_8"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="8" />

            <TextView
                android:id="@+id/btn_9"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="9" />

            <TextView
                android:id="@+id/btn_multiply"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_3_btn"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_4"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="4" />

            <TextView
                android:id="@+id/btn_5"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="5" />

            <TextView
                android:id="@+id/btn_6"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="6" />

            <TextView
                android:id="@+id/btn_minus"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_3_btn"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_1"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="1" />

            <TextView
                android:id="@+id/btn_2"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="2" />

            <TextView
                android:id="@+id/btn_3"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="3" />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_3_btn"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_dot"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="." />

            <TextView
                android:id="@+id/btn_0"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:text="0" />

            <TextView
                android:id="@+id/btn_back"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_btn"
                android:textSize="38sp"
                android:text="Back" />

            <TextView
                android:id="@+id/btn_equal"
                style="@style/MyButton"
                android:layout_weight="1"
                android:backgroundTint="@color/background_3_btn"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>